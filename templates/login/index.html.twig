{# templates/login/console.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div {{ react_component('Flash', { 'label': label, 'message': message }) }}>
                    Loading... <i class="fas fa-cog fa-spin fa-3x"></i>
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <div class="auth">
        <div>
            <div class="auth__card" style="width: 400px;">
                <form action="{{ path('app_login') }}" method="post">
                    <div class="mb-4">
                        <label for="username">Email:</label><br>
                        <input type="text" id="username" name="_username" value="{{ last_username }}"
                               style="width: 100%">
                    </div>
                    <div class="mb-4">
                        <label for="password">Mot de passe:</label><br>
                        <input type="password" id="password" name="_password" style="width: 100%">
                    </div>

                    <button type="submit" class="btn btn-primary">login</button>
                </form>
            </div>
            <p class="new__account">Pas de compte ? <span><a href="{{ path('app_register') }}" style="color: #00FF00">Créez le dès maintenant</a></span></p>
        </div>
    </div>
{% endblock %}