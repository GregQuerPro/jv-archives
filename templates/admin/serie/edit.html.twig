{% extends 'admin/layout.html.twig' %}

{% block title %}Editer Serie{% endblock %}

{% block body %}
    <h1 class="mb-4">Editer Série</h1>

        <div class="d-flex justify-content-between align-items-center">
            <div>
                <div>Dernière modification: <strong>{{ serie.updatedAt|format_datetime('full', locale='fr')|capitalize }}</strong></div>
            </div>
        {{ include('admin/serie/_delete_form.html.twig') }}
        </div>
    {{ form_start(form) }}
    <div class="d-flex justify-content-end mt-2">
        <button type="submit"
                    class="btn btn-primary m-1">{{ button_label|default('Mettre à jour') }}</button>
    </div>
    {{ include('admin/serie/_form.html.twig') }}
    {{ form_end(form) }}
{% endblock %}
