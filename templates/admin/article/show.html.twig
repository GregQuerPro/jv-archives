{% extends 'admin/layout.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Détails Article</h1>

    <div class="mb-4">
        <div class="d-flex justify-content-end">
            <div class="m-1">
                <a href="{{ path('app_admin_article_edit', {'id': article.id}) }}" class="btn btn-primary">Editer</a>
            </div>
            <div class="m-1">
                {{ include('admin/article/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
    <table class="table">
        <tbody>
        <tr>
            <th>Titre</th>
            <td>{{ article.title }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ article.slug }}</td>
        </tr>
        <tr>
            <th>Contenu</th>
            <td>{{ article.excerpt }}</td>
        </tr>
        <tr>
            <th>Publié</th>
            <td>{{ article.published ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Création</th>
            <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Mise à jour</th>
            <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="{{ vich_uploader_asset(article) }}" alt="" width="400px"></td>
        </tr>
        </tbody>
    </table>



{% endblock %}
