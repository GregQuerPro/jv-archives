{% extends 'admin/layout.html.twig' %}

{% block title %}Editer Utilisateur{% endblock %}

{% block body %}
    <h1 class="mb-4">Editer Utilisateur</h1>

    <div class="d-flex justify-content-between align-items-center">
        <div>
            <div>Dernière modification:
                <strong>{{ user.updatedAt|format_datetime('full', locale='fr')|capitalize }}</strong></div>
        </div>
        {% if 'ROLE_ADMIN' not in user.roles %}
            {{ include('admin/user/_delete_form.html.twig') }}
        {% endif %}
    </div>
    {{ form_start(form) }}
    <div class="d-flex justify-content-end mt-2">
        <button type="submit"
                class="btn btn-primary m-1">{{ button_label|default('Mettre à jour') }}</button>
    </div>
    {{ include('admin/user/_form.html.twig') }}
    {{ form_end(form) }}
{% endblock %}
