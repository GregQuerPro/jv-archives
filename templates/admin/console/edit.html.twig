{% extends 'admin/layout.html.twig' %}

{% block title %}Editer Console{% endblock %}

{% block body %}
    <h1 class="mb-4">Editer Console</h1>

    <div class="d-flex justify-content-between align-items-center">
        <div>
            <div>Dernière modification:
                <strong>{{ console.updatedAt|format_datetime('full', locale='fr')|capitalize }}</strong></div>
        </div>
        {% if console.name != 'Autres' %}
            {{ include('admin/console/_delete_form.html.twig') }}
        {% endif %}
    </div>
    {{ form_start(form) }}
    <div class="d-flex justify-content-end mt-2">
        <button type="submit"
                class="btn btn-primary m-1">{{ button_label|default('Mettre à jour') }}</button>
    </div>
    {{ include('admin/console/_form.html.twig') }}
    {{ form_end(form) }}
{% endblock %}
