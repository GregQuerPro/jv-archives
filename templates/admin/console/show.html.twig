{% extends 'admin/layout.html.twig' %}

{% block title %}Console{% endblock %}

{% block body %}
    <h1>Console</h1>

    <div class="mb-4">
        <div class="d-flex justify-content-end">
            <div class="m-1">
                <a href="{{ path('app_admin_console_edit', {'id': console.id}) }}" class="btn btn-primary">Editer</a>
            </div>
            <div class="m-1">
                {{ include('admin/console/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

    <table class="table">
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ console.name }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ console.slug }}</td>
        </tr>
        <tr>
            <th>Création</th>
            <td>{{ console.createdAt ? console.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Mise à jour</th>
            <td>{{ console.updatedAt ? console.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="{{ vich_uploader_asset(console) }}" alt="" width="400px"></td>
        </tr>
        </tbody>
    </table>
{% endblock %}
